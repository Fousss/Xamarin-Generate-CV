<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVApp.MainPage">

    <StackLayout Padding="20">
        <Label Text="Curriculum Vitae" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,40"/>

        <Entry Placeholder="Name" x:Name="NameEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Phone" x:Name="PhoneEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Address" x:Name="AddressEntry" Margin="0,0,0,10"/>

        <Button Text="Submit" Clicked="OnSubmitClicked" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
